<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".roles.teacher.fragments.TeacherProfileFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="8dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:weightSum="100">

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="15"
                        android:textColor="@color/colorAccent"
                        android:text="Name : "
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

                    <TextView
                        android:id="@+id/student_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="85"
                        android:gravity="right"
                        android:singleLine="true"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:textSize="15sp"
                        android:textStyle="italic" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/colorAccent"
                        android:layout_weight="15"
                        android:text="Class : "
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

                    <TextView
                        android:id="@+id/student_class"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="85"
                        android:gravity="right"
                        android:singleLine="true"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:textSize="15sp"
                        android:textStyle="italic" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="15"
                        android:textColor="@color/colorAccent"
                        android:text="Roll No : "
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

                    <TextView
                        android:id="@+id/student_rollno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="85"
                        android:gravity="right"
                        android:singleLine="true"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:textSize="15sp"
                        android:textStyle="italic" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="15"
                        android:textColor="@color/colorAccent"
                        android:text="Email : "
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

                    <TextView
                        android:id="@+id/student_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="85"
                        android:gravity="right"
                        android:singleLine="true"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:textSize="15sp"
                        android:textStyle="italic" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/colorAccent"
                        android:layout_weight="15"
                        android:text="Mobile : "
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

                    <TextView
                        android:id="@+id/student_mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="85"
                        android:gravity="right"
                        android:singleLine="true"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:textSize="15sp"
                        android:textStyle="italic" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/colorAccent"
                        android:layout_weight="15"
                        android:text="Date of Birth : "
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

                    <TextView
                        android:id="@+id/student_dob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="85"
                        android:gravity="right"
                        android:singleLine="true"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:textSize="15sp"
                        android:textStyle="italic" />
                </TableRow>

            </TableLayout>

            <TextView
                android:id="@+id/subheading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tableLayout"
                android:textColor="@color/colorAccent"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="16dp"
                android:text="Subjects: "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subheading"
                android:layout_marginTop="50dp"
                android:progressDrawable="@drawable/edulogo"
                android:layout_marginBottom="50dp"
                android:visibility="gone"/>

            <ListView
                android:id="@+id/subjects"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subheading"
                android:paddingHorizontal="10dp"
                android:scrollbars="none" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>