<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".roles.Organisation.fragments.ManualTeacherRegisterFragment3">

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Create Teacher"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/heading"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/dots" />

    <RelativeLayout
        android:id="@+id/input_form"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@+id/heading"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/inside_edittext_background"
        android:paddingHorizontal="5dp"
        android:paddingVertical="20dp">

        <TextView
            android:id="@+id/inner_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Class to teach"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp" />

        <ScrollView
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/addbtn"
            android:layout_below="@+id/inner_heading"
            android:layout_marginTop="10dp"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/class_details_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>

        </ScrollView>

        <TextView
            android:id="@+id/addbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_background"
            android:drawableRight="@drawable/ic_add"
            android:drawablePadding="5dp"
            android:drawableTint="@color/white"
            android:paddingHorizontal="20dp"
            android:paddingVertical="5dp"
            android:text="Add"
            android:textColor="@color/white"
            android:textSize="17sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/submitbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_form"
        android:layout_alignRight="@+id/input_form"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_background"
        android:paddingHorizontal="40dp"
        android:paddingVertical="5dp"
        android:text="Submit"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/small_wave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/submitbtn"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/small_wave_light" />

</RelativeLayout>