<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">

    <AutoCompleteTextView
        android:id="@+id/className"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:background="@drawable/details_background"
        android:enabled="false"
        android:hint="Class"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/class_drop_down"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/className"
        android:layout_alignRight="@+id/className"
        android:layout_alignBottom="@+id/className"
        android:background="@color/primaryLight"
        android:src="@drawable/ic_drop_down" />

    <AutoCompleteTextView
        android:id="@+id/section"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/details_background"
        android:enabled="false"
        android:hint="Section"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/section_drop_down"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/section"
        android:layout_alignRight="@+id/section"
        android:layout_alignBottom="@+id/section"
        android:background="@color/primaryLight"
        android:src="@drawable/ic_drop_down" />

    <AutoCompleteTextView
        android:id="@+id/subject"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/details_background"
        android:enabled="false"
        android:hint="Subject"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14sp"></AutoCompleteTextView>

    <ImageView
        android:id="@+id/subject_drop_down"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/subject"
        android:layout_alignRight="@+id/subject"
        android:layout_alignBottom="@+id/subject"
        android:background="@color/primaryLight"
        android:src="@drawable/ic_drop_down" />

    <ImageView
        android:id="@+id/remove_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_close"
        app:tint="@color/colorPrimaryDark"></ImageView>
</LinearLayout>