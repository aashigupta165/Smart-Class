<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".roles.Organisation.fragments.ProfileFragment">

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Smart Class"
        android:textSize="30sp"
        android:textStyle="bold" />

<!--    <com.google.android.material.imageview.ShapeableImageView-->
<!--        android:id="@+id/logo"-->
<!--        android:layout_width="100dp"-->
<!--        android:layout_height="100dp"-->
<!--        android:layout_below="@+id/heading"-->
<!--        android:layout_centerHorizontal="true"-->
<!--        android:layout_marginTop="10dp"-->
<!--        android:background="@drawable/ic_home" />-->

    <androidx.cardview.widget.CardView
        android:id="@+id/logo"
        android:layout_width="105dp"
        android:layout_height="105dp"
        app:cardCornerRadius="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/heading"
        app:cardBackgroundColor="@color/white">

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="150dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/org_Logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_home"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/org_Code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:text="Org's id - 027"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/org_Code"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:text="Password" />

    <EditText
        android:id="@+id/password_string"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/edittext_background"
        android:drawableRight="@drawable/ic_home"
        android:enabled="false"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        android:text="********"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/org_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_string"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="50dp"
        android:text="Ajay Kumar Garg Engineering College"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/org_Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/org_Name"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="30dp"
        android:text="27 Km, Delhi - Hapur bypass road, Ghaziabad - 201009"
        android:textAlignment="center"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/small_wave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/small_wave_light" />

</RelativeLayout>