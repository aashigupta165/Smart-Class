<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.education.smartclass">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".roles.student.activities.StudentActivity"></activity>
        <activity android:name=".roles.teacher.activities.TeacherActivity" />
        <activity android:name=".roles.admin.activities.AdminHomeActivity" />
        <activity android:name=".roles.Organisation.activities.OrganisationActivity" />
        <activity android:name=".roles.login.activities.ResetPasswordActivity" />
        <activity android:name=".roles.login.activities.OtpActivity" />
        <activity android:name=".roles.login.activities.ForgotPasswordActivity" />
        <activity android:name=".roles.admin.activities.RegisterNewOrgActivity1" />
        <activity android:name=".roles.admin.activities.RegisterNewOrgActivity2" />
        <activity android:name=".roles.admin.activities.RegisterNewOrgActivity3" />
        <activity android:name=".roles.login.activities.LoginActivity" />
        <activity android:name=".roles.common.activities.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".api.MyFirebaseMessagingService"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>

    </application>

</manifest>